@model EducationalApplication.Models.SchoolName
@{
    ViewData["Title"] = "Index";
}
<div class="text-center" style="border-style:solid;">
    <h2 style="font-size:medium">اختصاص نام مدرسه</h2>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        @*<p class="text text-danger">
            @TempData["PriceError"]
        </p>*@
        <form asp-action="Index">
            <div class="box zmdi-border-color" style="height:200px">
                <div class="box-body table-responsive no-padding" dir="rtl">

                    <p style="margin-top:5px;margin-right:10px;">
                        <button type="submit" class="btn btn-success">ثبت </button>
                    </p>
                    <label asp-for="Name" class="control-label"></label>


                    <div style="width:50%;margin-right:5px;">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div style="width:50%;margin-right:10px;margin-top:20px;">
                        <label> عنوان فعلی </label>

                    </div>
                    <div style="width:50%;margin-right:5px;">
                        <input disabled class="form-control" value="@ViewData["Name"] " />
                    </div>
                </div>
            </div>
       </form>
    </div>
</div>